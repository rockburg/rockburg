<!DOCTYPE html>
<html>
  <head>
    <title>Rockburg</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">

    <meta name="msapplication-TileColor" content="#9333ea">
    <meta name="theme-color" content="#9333ea">

    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="min-h-screen bg-gradient-to-br from-purple-50 via-white to-blue-50">
    <%= render "shared/season_header" %>
    <header class="bg-white shadow-sm">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex h-16 justify-between items-center">
          <div class="flex-shrink-0">
            <a href="/" class="font-bold text-2xl text-purple-700">Rockburg</a>
          </div>
          <div class="flex items-center space-x-4">
            <%= render "shared/manager_info" %>
            <nav class="flex space-x-8">
              <%= link_to "Home", root_path, class: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
              <%= link_to "About", about_path, class: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
              <% if Current.user %>
                <%= link_to "My Artists", artists_path, class: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
                <% if Current.user.admin? %>
                  <%= link_to "Admin", admin_root_path, class: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
                <% end %>
                <%= button_to "Sign out", session_path, method: :delete, class: "rounded-lg border border-gray-200 bg-white px-4 py-2 font-medium text-gray-700 transition-all hover:bg-gray-50" %>
              <% else %>
                <%= link_to "Sign in", new_session_path, class: "border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700 inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium" %>
                <%= link_to "Sign up", new_registration_path, class: "rounded-lg bg-gradient-to-r from-purple-500 to-blue-500 px-4 py-2 font-medium text-white transition-all hover:opacity-90" %>
              <% end %>
            </nav>
          </div>
        </div>
      </div>
    </header>

    <main class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
      <% if notice %>
        <div class="rounded-lg bg-green-50 p-4 mb-6">
          <div class="flex">
            <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <div class="ml-3">
              <div class="mt-2 text-sm text-green-700">
                <%= notice %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <% if alert %>
        <div class="rounded-lg bg-red-50 p-4 mb-6">
          <div class="flex">
            <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
            <div class="ml-3">
              <div class="mt-2 text-sm text-red-700">
                <%= alert %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <%= yield %>
    </main>

    <footer class="bg-white mt-auto border-t border-gray-200">
      <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
        <div class="flex flex-col-reverse justify-between sm:flex-row">
          <p class="text-sm text-gray-500">&copy; <%= Date.current.year %> Rockburg. All rights reserved.</p>
          <div class="space-x-6 mb-4 sm:mb-0">
            <%= link_to "Terms", terms_path, class: "text-sm text-gray-500 hover:text-gray-700" %>
            <%= link_to "Privacy", privacy_path, class: "text-sm text-gray-500 hover:text-gray-700" %>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
