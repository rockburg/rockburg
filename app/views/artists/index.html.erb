<h1 class="text-3xl font-bold mb-6">My Artists</h1>

<div class="mb-4 flex gap-4">
  <%= link_to "Select an Artist", artist_selections_path, class: "rounded-lg bg-gradient-to-r from-purple-500 to-blue-500 px-4 py-2 font-medium text-white transition-all hover:opacity-90" %>
</div>

<% if @artists.empty? %>
  <div class="rounded-lg bg-blue-50 p-4">
    <div class="flex">
      <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2h-1V9z" clip-rule="evenodd"/>
      </svg>
      <div class="ml-3">
        <div class="mt-2 text-sm text-blue-700">
          You haven't signed any artists yet. Select an artist from the available pool to get started!
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @artists.each do |artist| %>
      <div class="rounded-lg border border-gray-200 bg-white p-6 shadow-sm transition-all hover:shadow-md">
        <h3 class="font-bold"><%= artist.name %></h3>
        <p class="text-sm text-gray-500"><%= artist.genre %></p>
        
        <div class="mt-4 space-y-2">
          <div class="flex justify-between text-sm">
            <span class="text-gray-500">Talent</span>
            <span><%= artist.talent %>/100</span>
          </div>
          <div class="h-2 rounded-full bg-gray-100">
            <div class="h-full rounded-full bg-purple-500" style="width: <%= artist.talent %>%;"></div>
          </div>
          
          <div class="flex justify-between text-sm">
            <span class="text-gray-500">Energy</span>
            <span><%= artist.energy %>/100</span>
          </div>
          <div class="h-2 rounded-full bg-gray-100">
            <div class="h-full rounded-full bg-blue-500" style="width: <%= artist.energy %>%;"></div>
          </div>
          
          <div class="flex justify-between text-sm">
            <span class="text-gray-500">Popularity</span>
            <span><%= artist.popularity %>/100</span>
          </div>
          <div class="h-2 rounded-full bg-gray-100">
            <div class="h-full rounded-full bg-green-500" style="width: <%= artist.popularity %>%;"></div>
          </div>
        </div>
        
        <div class="mt-6 flex gap-2">
          <%= link_to "View", artist, class: "rounded-lg bg-purple-100 px-3 py-1 text-sm font-medium text-purple-700 transition-all hover:bg-purple-200" %>
          <%= link_to "Edit", edit_artist_path(artist), class: "rounded-lg border border-gray-200 bg-white px-3 py-1 text-sm font-medium text-gray-700 transition-all hover:bg-gray-50" %>
          <%= link_to "Delete", artist, method: :delete, data: { confirm: "Are you sure?" }, class: "rounded-lg bg-red-100 px-3 py-1 text-sm font-medium text-red-700 transition-all hover:bg-red-200" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
