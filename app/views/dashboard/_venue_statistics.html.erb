<%
  # Get the active season and its venue stats
  active_season = Season.active.first
  venue_stats = active_season&.venue_stats || {}
%>

<div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0">
      <i class="fas fa-building mr-2"></i> Venue Statistics
    </h5>
    <% if venue_stats.present? %>
      <small class="text-muted">
        Updated: <%= venue_stats["generated_at"] ? time_ago_in_words(Time.parse(venue_stats["generated_at"])) + " ago" : "Never" %>
      </small>
    <% end %>
  </div>
  
  <div class="card-body">
    <% if venue_stats.blank? %>
      <div class="alert alert-info">
        No venue statistics are available yet. Statistics will be generated after venue regeneration.
      </div>
    <% else %>
      <div class="row mb-4">
        <div class="col-md-4">
          <div class="card bg-light">
            <div class="card-body text-center">
              <h3 class="h2 mb-0"><%= venue_stats["venue_count"] || 0 %></h3>
              <p class="text-muted mb-0">Total Venues</p>
            </div>
          </div>
        </div>
        
        <div class="col-md-8">
          <h6 class="mb-3">Venues by Tier</h6>
          <div class="progress-stacked mb-3">
            <% total_venues = venue_stats["venue_count"] || 0 %>
            <% (1..3).each do |tier| %>
              <% 
                tier_data = venue_stats.dig("performances_by_tier", tier.to_s) 
                tier_count = tier_data ? tier_data["venues"] : 0
                percentage = total_venues > 0 ? (tier_count.to_f / total_venues * 100).round : 0
                
                # Colors for tiers
                color = case tier
                  when 1 then "bg-info"
                  when 2 then "bg-primary"
                  when 3 then "bg-success"
                  else "bg-secondary"
                end
              %>
              <div class="progress-bar <%= color %>" role="progressbar" style="width: <%= percentage %>%" 
                   aria-valuenow="<%= percentage %>" aria-valuemin="0" aria-valuemax="100" 
                   data-bs-toggle="tooltip" title="Tier <%= tier %>: <%= tier_count %> venues (<%= percentage %>%)">
              </div>
            <% end %>
          </div>
          <div class="d-flex justify-content-between small">
            <span class="text-info">Tier 1</span>
            <span class="text-primary">Tier 2</span>
            <span class="text-success">Tier 3</span>
          </div>
        </div>
      </div>
      
      <% if venue_stats.dig("performances_by_tier").present? %>
        <h6 class="mb-3">Performance Statistics by Venue Tier</h6>
        <div class="table-responsive">
          <table class="table table-sm table-bordered">
            <thead class="table-light">
              <tr>
                <th>Tier</th>
                <th>Performances</th>
                <th>Average Attendance</th>
                <th>Total Revenue</th>
              </tr>
            </thead>
            <tbody>
              <% (1..3).each do |tier| %>
                <% tier_data = venue_stats.dig("performances_by_tier", tier.to_s) %>
                <% if tier_data %>
                  <tr>
                    <td>Tier <%= tier %></td>
                    <td><%= tier_data["performances"] %></td>
                    <td><%= number_to_percentage(tier_data["avg_attendance_percentage"], precision: 1) %></td>
                    <td><%= number_to_currency(tier_data["total_revenue"]) %></td>
                  </tr>
                <% else %>
                  <tr>
                    <td>Tier <%= tier %></td>
                    <td>0</td>
                    <td>0%</td>
                    <td>$0.00</td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
      
      <% if venue_stats.dig("most_popular_venues").present? && venue_stats["most_popular_venues"].any? %>
        <h6 class="mt-4 mb-3">Most Popular Venues</h6>
        <div class="table-responsive">
          <table class="table table-sm">
            <thead class="table-light">
              <tr>
                <th>Venue</th>
                <th>Tier</th>
                <th>Performances</th>
                <th>Avg. Attendance</th>
                <th>Total Revenue</th>
              </tr>
            </thead>
            <tbody>
              <% venue_stats["most_popular_venues"].each do |venue| %>
                <tr>
                  <td><%= venue["name"] %></td>
                  <td><%= venue["tier"] %></td>
                  <td><%= venue["performance_count"] %></td>
                  <td><%= venue["avg_attendance"] %> people</td>
                  <td><%= number_to_currency(venue["total_revenue"]) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
      
      <% if current_manager.admin? %>
        <div class="mt-4">
          <%= button_to "Recalculate Venue Statistics", recalculate_venue_stats_path, method: :post, class: "btn btn-sm btn-outline-primary" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<div class="card mb-4">
  <div class="card-header">
    <h5 class="mb-0">
      <i class="fas fa-building mr-2"></i> Venue Opportunities
    </h5>
  </div>
  <div class="card-body">
    <% 
      venue_count = Venue.count
      available_venues = current_manager&.available_venues&.count || 0
      percentage = (available_venues.to_f / venue_count * 100).round if venue_count > 0
    %>
    
    <div class="mb-3">
      <p class="mb-1 text-sm font-medium text-gray-700">Venues Available</p>
      <div class="flex items-center">
        <div class="flex-grow">
          <div class="progress" style="height: 8px;">
            <div class="progress-bar bg-success" role="progressbar" style="width: <%= percentage %>%;" 
                 aria-valuenow="<%= percentage %>" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
        </div>
        <span class="ml-2 text-sm font-medium text-gray-700"><%= available_venues %>/<%= venue_count %></span>
      </div>
      <p class="mt-1 text-xs text-gray-500">
        Your manager level determines which venues your artists can perform at.
      </p>
    </div>
    
    <% if current_manager.artists.present? && current_manager.available_venues.present? %>
      <div class="mt-4">
        <h6 class="text-sm font-semibold mb-2">Recommended Venues</h6>
        <div class="space-y-2">
          <% current_manager.available_venues.order(prestige: :desc).limit(3).each do |venue| %>
            <%= link_to venue_path(venue), class: "flex items-center justify-between p-2 rounded-lg bg-gray-50 hover:bg-gray-100 transition-colors duration-200" do %>
              <div>
                <p class="font-medium text-gray-900"><%= venue.name %></p>
                <p class="text-xs text-gray-500">Tier <%= venue.tier %>, <%= venue.capacity %> capacity</p>
              </div>
              <span class="badge bg-info text-white">Prestige: <%= venue.prestige %></span>
            <% end %>
          <% end %>
        </div>
        
        <div class="mt-4 text-center">
          <%= link_to "View All Venues", venues_path, class: "btn btn-sm btn-outline-primary" %>
          <% if current_manager.upcoming_performances.any? %>
            <%= link_to "View Performances", performances_path, class: "btn btn-sm btn-primary" %>
          <% else %>
            <%= link_to "Book Performance", new_performance_path, class: "btn btn-sm btn-primary" %>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="alert alert-info mb-0">
        <% if current_manager.artists.empty? %>
          You need to sign artists before you can book venues.
          <%= link_to "Create your first artist", new_artist_path, class: "alert-link" %>
        <% else %>
          No venues are available for your artists yet. Keep developing your artists to unlock venues.
        <% end %>
      </div>
    <% end %>
  </div>
</div> 