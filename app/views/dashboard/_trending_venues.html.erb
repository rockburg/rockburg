<div class="rounded-lg border border-gray-200 bg-white shadow-sm">
  <div class="px-6 py-4 border-b border-gray-200">
    <h3 class="text-xl font-bold text-gray-800">Trending Venues</h3>
  </div>
  <div class="px-6 py-4">
    <% trending_venues = Venue.order(prestige: :desc).limit(5) %>
    
    <% if trending_venues.any? %>
      <div class="space-y-3">
        <% trending_venues.each do |venue| %>
          <%= link_to venue_path(venue), class: "block p-4 rounded-lg border border-gray-200 hover:bg-gray-50 transition-all" do %>
            <div class="flex justify-between items-center">
              <div>
                <h4 class="font-bold text-gray-800 mb-1"><%= venue.name %></h4>
                <div class="flex flex-wrap gap-2">
                  <span class="rounded-full bg-blue-100 px-3 py-1 text-xs font-medium text-blue-700">Capacity: <%= venue.capacity %></span>
                  <span class="rounded-full bg-yellow-100 px-3 py-1 text-xs font-medium text-yellow-700">Tier <%= venue.tier %></span>
                  <span class="rounded-full bg-green-100 px-3 py-1 text-xs font-medium text-green-700">Prestige: <%= venue.prestige %></span>
                </div>
              </div>
              <div>
                <span class="rounded-full bg-gray-100 px-3 py-1 text-xs font-medium text-gray-700"><%= number_to_currency(venue.booking_cost) %></span>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="rounded-lg bg-blue-50 p-4 text-blue-700">
        No venues are available yet.
      </div>
    <% end %>
    
    <div class="mt-4 text-center">
      <%= link_to "View All Venues", venues_path, class: "rounded-lg bg-gradient-to-r from-purple-500 to-blue-500 px-4 py-2 font-medium text-white transition-all hover:opacity-90" %>
    </div>
  </div>
</div> 