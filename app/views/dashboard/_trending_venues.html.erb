<div class="card mb-4">
  <div class="card-header">
    <h5 class="mb-0">
      <i class="fas fa-fire mr-2"></i> Trending Venues
    </h5>
  </div>
  <div class="card-body">
    <% trending_venues = Venue.order(prestige: :desc).limit(5) %>
    
    <% if trending_venues.any? %>
      <div class="list-group">
        <% trending_venues.each do |venue| %>
          <%= link_to venue_path(venue), class: "list-group-item list-group-item-action d-flex justify-content-between align-items-center" do %>
            <div>
              <h6 class="mb-1"><%= venue.name %></h6>
              <small>
                <span class="badge bg-info">Capacity: <%= venue.capacity %></span>
                <span class="badge bg-warning text-dark">Tier <%= venue.tier %></span>
                <span class="badge bg-success">Prestige: <%= venue.prestige %></span>
              </small>
            </div>
            <div class="text-end">
              <span class="badge bg-secondary"><%= number_to_currency(venue.booking_cost) %></span>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="alert alert-info mb-0">
        No venues are available yet.
      </div>
    <% end %>
    
    <div class="mt-3 text-center">
      <%= link_to "View All Venues", venues_path, class: "btn btn-sm btn-primary" %>
    </div>
  </div>
</div> 