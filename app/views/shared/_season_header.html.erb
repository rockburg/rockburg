<% if current_season.present? %>
  <div class="bg-gradient-to-r from-purple-600 to-blue-500 text-white py-2">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
          </svg>
          <span class="text-sm font-medium">
            Current Season: <%= current_season.name %>
          </span>
        </div>
        <div class="text-sm">
          <% if current_season.started_at.present? %>
            <span class="font-medium">
              Running for <%= time_ago_in_words(current_season.started_at) %>
            </span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %> 