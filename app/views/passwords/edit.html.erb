<div class="mx-auto md:w-2/3 w-full max-w-md">
  <div class="rounded-lg border border-gray-200 bg-white p-6 shadow-sm">
    <h1 class="text-2xl font-bold mb-6 text-center">Set New Password</h1>

    <%= form_with(url: password_path, method: :patch, class: "contents") do |form| %>
      <%= form.hidden_field :token, value: params[:token] %>

      <div class="my-5">
        <label class="mb-1 block text-sm font-medium text-gray-700">Password</label>
        <%= form.password_field :password, required: true, placeholder: "Enter your new password", minlength: 6, class: "w-full rounded-lg border border-gray-200 p-2 focus:border-purple-500 focus:outline-none focus:ring-1 focus:ring-purple-500" %>
      </div>

      <div class="my-5">
        <label class="mb-1 block text-sm font-medium text-gray-700">Confirm Password</label>
        <%= form.password_field :password_confirmation, required: true, placeholder: "Confirm your new password", minlength: 6, class: "w-full rounded-lg border border-gray-200 p-2 focus:border-purple-500 focus:outline-none focus:ring-1 focus:ring-purple-500" %>
      </div>

      <div class="mt-6">
        <%= form.submit "Update Password", class: "w-full rounded-lg bg-gradient-to-r from-purple-500 to-blue-500 px-4 py-2 font-medium text-white transition-all hover:opacity-90" %>
      </div>
    <% end %>
  </div>
</div>
