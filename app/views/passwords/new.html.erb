<div class="mx-auto md:w-2/3 w-full max-w-md">
  <div class="rounded-lg border-2 border-[#E2E8F0] bg-white p-6">
    <h1 class="text-2xl font-bold mb-6 text-center">Reset Password</h1>

    <p class="text-sm text-gray-600 mb-6">
      Enter your email address and we'll send you a link to reset your password.
    </p>

    <%= form_with(url: passwords_path, method: :post, class: "contents") do |form| %>
      <div class="my-5">
        <label class="mb-1 block text-sm font-medium text-gray-700">Email Address</label>
        <%= form.email_field :email_address, required: true, autofocus: true, placeholder: "Enter your email address", value: params[:email_address], class: "w-full rounded-lg border border-gray-200 p-2 focus:border-purple-500 focus:outline-none focus:ring-1 focus:ring-purple-500" %>
      </div>

      <div class="mt-6">
        <%= form.submit "Reset Password", class: "btn-primary w-full px-4 py-2" %>
      </div>
    <% end %>
  </div>

  <div class="mt-6 text-center">
    <p class="text-sm text-gray-600">
      Remember your password? 
      <%= link_to "Sign in", new_session_path, class: "text-purple-600 hover:text-purple-800" %>
    </p>
  </div>
</div>
