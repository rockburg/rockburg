<div class="max-w-4xl mx-auto p-6">
  <h1 class="text-3xl font-bold mb-6">Generate Artists</h1>
  
  <div class="bg-white shadow-md rounded-lg p-6 mb-8">
    <h2 class="text-xl font-semibold mb-4">Generate a Single Artist</h2>
    <p class="mb-4">Generate a single artist with AI-powered attributes and traits.</p>
    
    <%= form_with url: create_artist_generator_path, method: :post, class: "mb-4" do |form| %>
      <div class="flex justify-end">
        <%= form.submit "Generate Artist", class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>
  
  <div class="bg-white shadow-md rounded-lg p-6">
    <h2 class="text-xl font-semibold mb-4">Generate Multiple Artists</h2>
    <p class="mb-4">Generate a batch of artists at once. You can generate up to 50 artists at a time.</p>
    
    <%= form_with url: batch_artist_generator_path, method: :post do |form| %>
      <div class="mb-4">
        <%= form.label :count, "Number of artists to generate:", class: "block text-gray-700 font-medium mb-2" %>
        <%= form.number_field :count, min: 1, max: 50, value: 10, class: "w-full border border-gray-300 rounded-md py-2 px-3" %>
      </div>
      
      <div class="flex justify-end">
        <%= form.submit "Generate Batch", class: "bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>
  
  <div class="mt-8">
    <%= link_to "Back to Artists", artists_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>
</div>
