<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NFT UI Kit</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'primary': '#E752CE',
                        'primary-border': '#C23AAD',
                        'buy': '#F5A05C',
                        'buy-border': '#D37B3B',
                        'buy-bottom': '#D88441',
                    }
                }
            }
        }
    </script>
</head>
<body class="min-h-screen bg-[#FAFAFA] p-8">
    <div class="max-w-[1200px] mx-auto space-y-16">
        <!-- Header -->
        <div>
            <h1 class="text-3xl font-bold mb-4">NFT UI Kit</h1>
            <p class="text-gray-600">Complete design system with 2px borders and precise specifications</p>
        </div>

        <!-- Colors -->
        <section>
            <h2 class="text-xl font-semibold mb-6">Color System</h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                <!-- Primary Orange -->
                <div class="space-y-2">
                    <div class="h-24 bg-[#F5A05C] rounded-xl border-2 border-[#D37B3B] border-b-4 border-b-[#D88441]"></div>
                    <div class="text-sm">
                        <p class="font-medium">Primary Orange</p>
                        <p class="font-mono text-gray-500">#F5A05C</p>
                        <p class="font-mono text-gray-500">Border: #D37B3B</p>
                    </div>
                </div>
                <!-- Primary Pink -->
                <div class="space-y-2">
                    <div class="h-24 bg-[#E752CE] rounded-xl border-2 border-[#C23AAD] border-b-4 border-b-[#C23AAD]"></div>
                    <div class="text-sm">
                        <p class="font-medium">Primary Pink</p>
                        <p class="font-mono text-gray-500">#E752CE</p>
                        <p class="font-mono text-gray-500">Border: #C23AAD</p>
                    </div>
                </div>
                <!-- Card Background -->
                <div class="space-y-2">
                    <div class="h-24 bg-white rounded-xl border-2 border-[#E2E8F0]"></div>
                    <div class="text-sm">
                        <p class="font-medium">Card Background</p>
                        <p class="font-mono text-gray-500">#FFFFFF</p>
                        <p class="font-mono text-gray-500">Border: #E2E8F0</p>
                    </div>
                </div>
                <!-- Background Gray -->
                <div class="space-y-2">
                    <div class="h-24 bg-[#EDF2F7] rounded-xl border-2 border-[#E2E8F0]"></div>
                    <div class="text-sm">
                        <p class="font-medium">Background Gray</p>
                        <p class="font-mono text-gray-500">#EDF2F7</p>
                        <p class="font-mono text-gray-500">Border: #E2E8F0</p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Typography -->
        <section>
            <h2 class="text-xl font-semibold mb-6">Typography</h2>
            <div class="bg-white rounded-xl border-2 border-[#E2E8F0] p-8 space-y-6">
                <div>
                    <span class="text-sm text-gray-500 mb-2 block">Heading 1</span>
                    <h1 class="text-4xl font-bold">The Quick Brown Fox</h1>
                </div>
                <div>
                    <span class="text-sm text-gray-500 mb-2 block">Heading 2</span>
                    <h2 class="text-2xl font-semibold">The Quick Brown Fox</h2>
                </div>
                <div>
                    <span class="text-sm text-gray-500 mb-2 block">Body</span>
                    <p class="text-base">The quick brown fox jumps over the lazy dog</p>
                </div>
                <div>
                    <span class="text-sm text-gray-500 mb-2 block">Small</span>
                    <p class="text-sm">The quick brown fox jumps over the lazy dog</p>
                </div>
            </div>
        </section>

        <!-- Buttons -->
        <section>
            <h2 class="text-xl font-semibold mb-6">Buttons</h2>
            <div class="bg-white rounded-xl border-2 border-[#E2E8F0] p-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <!-- Primary Buttons -->
                    <div class="space-y-4">
                        <h3 class="text-sm font-medium text-gray-500">Primary Buttons</h3>
                        <div class="space-y-4">
                            <!-- Start Button -->
                            <button class="h-10 px-8 bg-[#E752CE] text-white font-semibold rounded-xl border-2 border-[#C23AAD] border-b-4 hover:-translate-y-0.5 active:translate-y-0.5 active:border-b-2 transition-all duration-200">
                                Start
                            </button>
                            <!-- Buy with ETH Button -->
                            <button class="h-12 px-8 bg-[#F5A05C] text-white font-semibold rounded-xl border-2 border-[#D37B3B] border-b-4 border-b-[#D88441] hover:-translate-y-0.5 active:translate-y-0.5 active:border-b-2 transition-all duration-200">
                                Buy with ETH
                            </button>
                        </div>
                    </div>

                    <!-- Secondary Buttons -->
                    <div class="space-y-4">
                        <h3 class="text-sm font-medium text-gray-500">Secondary Buttons</h3>
                        <div class="space-y-4">
                            <!-- Quick Buy Button -->
                            <button class="h-8 pl-3 pr-4 bg-white text-gray-700 font-medium rounded-full border-2 border-[#E2E8F0] hover:border-gray-300 active:bg-gray-50 transition-all duration-200 flex items-center gap-1.5">
                                <span class="text-[#F5A05C] text-lg leading-none">•</span>
                                <span class="text-sm">Buy 0.002 ETH</span>
                            </button>
                            <!-- Filter Button -->
                            <button class="h-10 px-4 bg-white text-gray-700 font-medium rounded-lg border-2 border-[#E2E8F0] hover:border-gray-300 active:bg-gray-50 transition-all duration-200 flex items-center justify-between w-full">
                                <span>Filter</span>
                                <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="6 9 12 15 18 9"></polyline>
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Form Elements -->
        <section>
            <h2 class="text-xl font-semibold mb-6">Form Elements</h2>
            <div class="bg-white rounded-xl border-2 border-[#E2E8F0] p-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <!-- Inputs -->
                    <div class="space-y-4">
                        <h3 class="text-sm font-medium text-gray-500">Inputs</h3>
                        <div class="space-y-4">
                            <!-- Search Input -->
                            <div class="relative">
                                <input type="text" placeholder="Search" class="w-full h-10 pl-10 pr-4 rounded-lg border-2 border-[#E2E8F0] focus:border-[#E752CE] focus:outline-none transition-colors">
                                <svg class="w-4 h-4 absolute left-3 top-3 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <circle cx="11" cy="11" r="8"></circle>
                                    <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                                </svg>
                            </div>
                            <!-- Select -->
                            <select class="w-full h-10 px-4 rounded-lg border-2 border-[#E2E8F0] focus:border-[#E752CE] focus:outline-none transition-colors appearance-none bg-[url('data:image/svg+xml;charset=utf-8,%3Csvg xmlns=\'http://www.w3.org/2000/svg\' fill=\'none\' viewBox=\'0 0 24 24\'%3E%3Cpath stroke=\'%236B7280\' stroke-linecap=\'round\' stroke-linejoin=\'round\' stroke-width=\'2\' d=\'m6 9 6 6 6-6\'/%3E%3C/svg%3E')] bg-[length:20px_20px] bg-[right_0.5rem_center] bg-no-repeat">
                                <option>Select option</option>
                                <option>Option 1</option>
                                <option>Option 2</option>
                            </select>
                        </div>
                    </div>

                    <!-- Checkboxes -->
                    <div class="space-y-4">
                        <h3 class="text-sm font-medium text-gray-500">Checkboxes</h3>
                        <div class="space-y-4">
                            <!-- Checked -->
                            <label class="flex items-center gap-2 cursor-pointer">
                                <div class="w-5 h-5 rounded border-2 border-[#E752CE] flex items-center justify-center bg-[#E752CE]">
                                    <svg class="w-3 h-3 text-white" viewBox="0 0 12 12" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <polyline points="2 6 5 9 10 3"></polyline>
                                    </svg>
                                </div>
                                <span>Sale</span>
                            </label>
                            <!-- Unchecked -->
                            <label class="flex items-center gap-2 cursor-pointer">
                                <div class="w-5 h-5 rounded border-2 border-[#E2E8F0] flex items-center justify-center bg-white"></div>
                                <span>Sire</span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Cards -->
        <section>
            <h2 class="text-xl font-semibold mb-6">Cards</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <!-- NFT Card -->
                <div class="bg-white rounded-xl border-2 border-[#E2E8F0] overflow-hidden">
                    <div class="relative">
                        <div class="absolute top-4 left-4">
                            <button class="h-8 pl-3 pr-4 bg-white text-gray-700 font-medium rounded-full border-2 border-[#E2E8F0] flex items-center gap-1.5 hover:border-gray-300 transition-colors">
                                <span class="text-[#F5A05C] text-lg leading-none">•</span>
                                <span class="text-sm">Buy 0.002 ETH</span>
                            </button>
                        </div>
                        <div class="h-[256px] bg-[#EBF8FF] flex items-center justify-center">
                            <div class="w-32 h-32 bg-blue-200 rounded-xl"></div>
                        </div>
                        <div class="p-4">
                            <div class="flex justify-between items-center mb-2">
                                <span class="text-[14px] text-gray-700">#1921845</span>
                                <div class="flex items-center gap-1">
                                    <svg class="w-4 h-4 text-gray-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                                    </svg>
                                    <span class="text-[14px] text-gray-600">1</span>
                                </div>
                            </div>
                            <div class="flex items-center gap-4 text-[12px] text-gray-500">
                                <span>Gen 13</span>
                                <span>Sluggish (2d)</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Category Card -->
                <div class="bg-white rounded-lg border-2 border-[#E2E8F0] p-4 flex items-center justify-between">
                    <div class="flex items-center gap-2">
                        <span class="text-2xl">🖼️</span>
                        <span class="font-medium">Digital Art</span>
                    </div>
                    <span class="text-gray-600">Ξ0.002</span>
                </div>

                <!-- Filter Card (Selected) -->
                <div class="bg-[#FDF4FC] rounded-lg border-2 border-[#E752CE] p-4">
                    <span class="text-[#E752CE] font-medium">Base Color</span>
                </div>
            </div>
        </section>
    </div>
</body>
</html>
